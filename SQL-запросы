# Задание 1. Вывод списка логинов курьеров с количеством их заказов в статусе «В доставке»

SELECT  c.login,
	COUNT(o.track) AS number_orders
FROM "Couriers" AS c
INNER JOIN "Orders" AS o ON
c.id = o."courierId"
WHERE "inDelivery" = true
GROUP BY c.login;

# Задание 2. Вывод всех трекеров заказов и их статусов

SELECT  track,
   (CASE
     WHEN finished = true THEN 2
     WHEN cancelled = true THEN -1
     WHEN "inDelivery" = true THEN 1
     ELSE 0
   END) AS status
FROM "Orders";
